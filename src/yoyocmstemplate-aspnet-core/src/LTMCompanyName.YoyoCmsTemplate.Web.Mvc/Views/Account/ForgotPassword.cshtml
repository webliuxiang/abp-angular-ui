@using Abp.Authorization.Users
@section Scripts
{
    
    <environment include="Development">
        <script src="/view-resources/Views/Account/ForgotPassword.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="/view-resources/Views/Account/ForgotPassword.min.js" asp-append-version="true"></script>
    </environment>
}
    <div class="account-login">

        <div class="kt-login-v2__title">
            <h3 >
                @L("ForgotPassword")
            </h3>
        </div>
        <form class="kt-login-v2__form kt-form forget-form" asp-action="SendPasswordResetLink" method="post">
            <p>
                @L("SendPasswordResetLink_Information")
            </p>
            <div class="form-group">
                <input class="form-control " type="email" autocomplete="off" placeholder="@L("EmailAddress")" name="EmailAddress" required maxlength="@AbpUserBase.MaxEmailAddressLength" />
            </div>
            <div class="ml-auto ml-lg-auto">
                <a asp-action="Login" asp-controller="Account" class="btn btn-outline-primary  ">
                    @L("Back")
                </a>

               
                <button type="submit" class="btn btn-primary ">@L("Submit")</button>
            </div>
        </form>
    </div>