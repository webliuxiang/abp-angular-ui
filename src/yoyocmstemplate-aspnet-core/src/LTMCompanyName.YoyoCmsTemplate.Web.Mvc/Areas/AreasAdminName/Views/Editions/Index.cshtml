@using System.Threading.Tasks
@using LTMCompanyName.YoyoCmsTemplate.Authorization
@using LTMCompanyName.YoyoCmsTemplate.Web.Mvc.Areas.AreasAdminName.Startup
@{
    ViewBag.CurrentPageName = AppAdminPageNames.Host.Editions;
}
@section Styles{
<link href="~/view-resources/Areas/AreasAdminName/Views/Common/_FeaturesTree.css" rel="stylesheet"  asp-append-version="true" />
  
}
@section Scripts{

    <script src="~/view-resources/Areas/AreasAdminName/Views/Editions/Index.js" asp-append-version="true"></script>


    <script src="~/view-resources/Areas/AreasAdminName/Views/Common/_FeaturesTree.js"asp-append-version="true"></script>



}



						<div class="subheader py-6 py-lg-8 subheader-transparent" id="kt_subheader">
    <div class="row align-items-center">
        <div class="kt-subheader__main">
            <h3 class="text-dark font-weight-bold my-1 mr-5">
                <span>@L("Editions")</span>
            </h3>

        </div>

    </div>
</div>




					<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head">
            <div class="kt-portlet__head-label">
                <h3 class="kt-portlet__head-title">
                    @L("Editions")

                    <small>  @L("EditionsHeaderInfo")</small>
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                @if (IsGranted(YoyoSoftPermissionNames.Pages_Editions_Create))
                {
                    <button id="CreateNewEditionButton" class="btn btn-primary"><i class="fa fa-plus"></i> @L("CreateNewEdition")</button>
                }
            </div>
        </div>
        <div class="kt-portlet__body">

            <table id="EditionsTable" class="table table-striped- table-bordered table-hover table-checkable">
                <thead>
                    <tr>
                        <th></th>
                        <th>@L("Actions")</th>
                        <th>@L("EditionName")</th>
                        <th>@L("Price")</th>
                        <th>@L("IsTrialActive")</th>
                        @*<th>@L("WaitingDayAfterExpire")</th>
                            <th>@L("ExpiringEdition")</th>*@
                    </tr>
                </thead>
            </table>

        </div>
    </div>
</div> 