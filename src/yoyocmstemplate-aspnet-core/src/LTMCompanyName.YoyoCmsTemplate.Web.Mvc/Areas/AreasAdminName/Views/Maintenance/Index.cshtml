
@using LTMCompanyName.YoyoCmsTemplate.Web.Mvc.Areas.AreasAdminName.Startup
@model LTMCompanyName.YoyoCmsTemplate.Web.Mvc.Areas.AreasAdminName.ViewModels.Maintenance.MaintenanceViewModel
@{
    ViewBag.CurrentPageName = AppAdminPageNames.Host.Maintenance;
}
@section Styles {
    <environment include="Development">
        <link href="~/view-resources/Areas/AreasAdminName/Views/Maintenance/Index.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link href="~/view-resources/Areas/AreasAdminName/Views/Maintenance/Index.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
   
 }
@section Scripts {
    <environment include="Development">
        <script src="/view-resources/Areas/AreasAdminName/Views/Maintenance/Index.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="/view-resources/Areas/AreasAdminName/Views/Maintenance/Index.min.js" asp-append-version="true"></script>
    </environment>
   
}



<div class="kt-subheader   kt-grid__item">
    <div class="kt-subheader__main">
        <h3 class="text-dark font-weight-bold my-1 mr-5">@L("Maintenance")</h3>
        <span class="kt-subheader__separator kt-hidden"></span>

    </div>

</div>
<div class="kt-content  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet kt-portlet--tabs">
        <div class="kt-portlet__head">
            <div class=kt-portlet__head-toolbar">

                <ul class="nav nav-tabs nav-tabs-line nav-tabs-line-brand nav-tabs-line-2x nav-tabs-line-right nav-tabs-bold" role="tablist">
                    <li class="nav-item">
                        <a href="#CachesTab" class="nav-link active" data-toggle="tab" role="tab" aria-selected="True">
                            <i class="flaticon2-heart-rate-monitor" aria-hidden="true"></i>
                            @L("Caches")
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a href="#WebSiteLogsTab" data-toggle="tab" role="tab" class="nav-link ">
                            <i class="fab fa-gitter" aria-hidden="true"></i>
                            @L("WebSiteLogs")
                        </a>
                    </li>
                </ul>


            </div>
        </div>
        <div class="kt-portlet__body">
            <div class="tab-content">
                <div class="tab-pane active" id="CachesTab" role="tabpanel">
                    <div class="row kt-margin-b-10">
                        <div class="col-xl-6">
                            <div class="kt-heading kt-heading--space-sm">@L("CachesHeaderInfo")</div>
                        </div>
                        <div class="col-xl-6 text-right">
                            <button id="ClearAllCachesButton" class="btn btn-primary"><i class="fa fa-recycle"></i> @L("ClearAll")</button>
                        </div>
                    </div>
                    <div class="kt-separator kt-separator--space-md kt-separator--border-dashed"></div>
                    <div class="row">
                        <div class="col-xl-12">
                            <table class="table table-striped table-hover table-bordered">
                                <tbody>
                                    @foreach (var cache in Model.Caches)
                                    {
                                        <tr>
                                            <td>
                                                <span>@cache.Name</span>
                                                <button class="btn btn-primary btn-sm pull-right btn-clear-cache" data-cache-name="@cache.Name">
                                                    <i class="fa fa-recycle"></i> @L("Clear")
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="WebSiteLogsTab" role="tabpanel">
                    <div class="row kt-margin-b-10">
                        <div class="col-6">
                            <div class="kt-heading kt-heading--space-sm">@L("WebSiteLogsHeaderInfo")</div>
                        </div>
                        <div class="col-6 text-right">
                            <button id="DownloadAllLogsbutton" class="btn btn-metal"><i class="fa fa-download"></i> @L("DownloadAll")</button>
                            <button id="RefreshButton" class="btn btn-primary"><i class="fa fa-sync"></i> @L("Refresh")</button>
                        </div>
                    </div>
                    <div class="kt-separator kt-separator--space-md kt-separator--border-dashed"></div>
                    <div class="row">
                        <div class="col-xl-12">
                            <div id="WebSiteLogsContent" class="web-log-view full-height">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

