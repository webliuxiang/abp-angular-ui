@using Abp.Application.Services.Dto
@using LTMCompanyName.YoyoCmsTemplate.Authorization
@using LTMCompanyName.YoyoCmsTemplate.Web.Mvc.Areas.AreasAdminName.Startup
@model LTMCompanyName.YoyoCmsTemplate.Web.Mvc.Areas.AreasAdminName.ViewModels.Roles.RoleListViewModel
@{
    ViewBag.CurrentPageName = AppAdminPageNames.Common.Roles;
}

@section Scripts
    {
    <script src="~/view-resources/Areas/AreasAdminName/Views/Roles/Index.js" asp-append-version="true"></script>
    <script src="~/view-resources/Areas/AreasAdminName/Views/Common/_PermissionTree.js" asp-append-version="true"></script>
}




<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">



    <div class="subheader py-6 py-lg-8 subheader-transparent" id="kt_subheader">
        <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center flex-wrap mr-1">
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <h3 class="text-dark font-weight-bold my-1 mr-5">
                        @L("Roles")
                    </h3>
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">     @L("RolesHeaderInfo")</a>
                        </li>

                    </ul>
                </div>


            </div>
        </div>
    </div>

    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <div class="card card-custom gutter-b">
                <div class="card-header flex-wrap py-3">
                    <div class="card-title">
                        <h3 class="card-label">
                            Basic Demo
                            <span class="d-block text-muted pt-2 font-size-sm">sorting &amp; pagination remote datasource</span>
                        </h3>
                    </div>


                    <div class="card-toolbar">
                        @if (IsGranted(YoyoSoftPermissionNames.Pages_Administration_Roles_Create))
                        {
                            <button id="CreateNewRoleButton" class="btn btn-primary font-weight-bolder">
                                <i class="la la-plus"></i> @L("CreateNewRole")
                            </button>
                        }
                    </div>
                </div>
                     <div class="card-body">
                        <div class=" kt-form kt-form--label-align-right">
                            <div class="row kt--margin-b-10">
                                <div class="col-xl-6 col-lg-4 col-md-9 col-sm-12">
                                    <div class="form-group">
                                        @Html.DropDownList(
                                            "PermissionSelectionCombobox", Model.Permissions.Select(i => i.ToSelectListItem()),
                                            new
                                            {
                                                @class = "form-control yoyo_select2",
                                                data_live_search = "true",
                                                data_none_selected_text = L("FilterByPermission"),
                                                id = "PermissionSelectionCombo"
                                            })
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-4 col-md-9 col-sm-12 text-right">
                                    <button id="RefreshRolesButton" class="btn btn-metal kt-btn kt-btn--icon">
                                        <i class="la la-refresh"></i> @L("Refresh")
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="kt-separator kt-separator--border-dashed mb-3"></div>
                        <div class="kt-portlet__body">
                            <table id="RolesTable" class="table table-striped- table-bordered table-hover table-checkable">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("Actions")</th>
                                        <th>@L("RoleName")</th>
                                        <th>@L("CreationTime")</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
              
            </div>
        </div>
</div>
